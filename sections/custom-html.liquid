<section class="Section Section--spacingNormal Section--custom" id="section-{{ section.id }}">
  <div class="Container Container--narrow">
    {%- if section.settings.subheading != blank or section.settings.title != blank -%}
      <header class="SectionHeader">
        <div class="SectionHeader__row">
          <div class="SectionHeader__column">
            {%- if section.settings.subheading != blank -%}
              <h3 class="SectionHeader__SubHeading Heading u-h6 Text--bold">{{ section.settings.subheading | escape }}</h3>
            {%- endif -%}
    
            {%- if section.settings.title != blank -%}
              <h2 class="SectionHeader__Heading Heading u-h1 Text--bold">{{ section.settings.title | escape }}</h2>
            {%- endif -%}
          </div>
        </div>
      </header>
    {%- endif -%}

    <div class="Rte" style="text-align: center">
      {{ section.settings.html }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your HTML"
    },
    {
      "type": "html",
      "id": "html",
      "label": "HTML content",
      "default": "<p>Write your own custom HTML content.</p>"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom HTML",
      "settings": {}
    }
  ]
}
{% endschema %}