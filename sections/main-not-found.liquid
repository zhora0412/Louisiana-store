<div class="EmptyState">
  <div class="Container">
    <img class="EmptyState__Image" src="{{ section.settings.image | img_url: '206x' }}" alt="{{ section.settings.title }}" loading="lazy">
    <h3 class="EmptyState__Title Heading">{{ section.settings.title }}</h3>
    <p class="EmptyState__Description Text--subdued u-h5">{{ section.settings.content }}</p>
    <a href="{{ routes.root_url }}" class="EmptyState__Action Button Button--primary Button--large">{{ section.settings.back_to }}</a>
  </div>
</div>

{% schema %}
{
  "name": "404 page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "back_to",
      "label": "Back to button text"
    }
  ]
}
{% endschema %}